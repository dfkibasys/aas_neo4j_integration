{
    "name": "Neo4jSinkConnectorAasEvents",
    "config": {
        "connector.class":"io.github.clescot.kafka.connect.http.sink.HttpSinkConnector",
        "tasks.max": "1",    
        "executor.threads": "1", 
        "batch.size": "1",
        "topics": "aas-events,submodel-events",

        "key.converter": "org.apache.kafka.connect.storage.StringConverter",
        "value.converter": "org.apache.kafka.connect.json.JsonConverter",
        "value.converter.schemas.enable": "false",
        
        
        "exception.strategy": "RETRY",

        "transforms": "CypherTransformation",
        "transforms.CypherTransformation.type": "org.eclipse.basyx.kafka.connect.neo4j.CypherTransformation",
        "errors.tolerance": "all", 
        "errors.log.enable": true,
        "errors.deadletterqueue.topic.name": "dlq-aas-events",
        "errors.deadletterqueue.topic.replication.factor": 1,
        "errors.deadletterqueue.context.headers.enable": true,
        
        "config.default.retries":"5",
        "config.default.retry.delay.in.ms":"2000",
        "config.default.retry.max.delay.in.ms":"600000",
        "config.default.retry.delay.factor":"1.5",

        "consumer.override.request.timeout.ms": "120000",
        "consumer.override.session.timeout.ms": "30000",
        "consumer.override.max.poll.interval.ms": "300000",

        "http.connection.timeout.ms" : "10000",   
        "http.socket.timeout.ms": "120000",             
        "http.request.timeout.ms": "120000"

    }
}